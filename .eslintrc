{
  "extends": [
    "standard"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "rules": {
    "no-debugger": "warn",
    "comma-dangle": 0,
    "quotes": [2, "single", "avoid-escape"],
    "no-unused-vars": [1],
    "no-return-assign": 0,
    "padded-blocks": 0,
  }
}
