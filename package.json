  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.18.1",
    "mocha": "^5.0.1",
    "nodemon": "^1.15.1",
    "standard": "^11.0.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "is-master": "^1.2.2",
    "jsonwebtoken": "^8.1.1",
    "mongo": "^0.1.0",
    "mongoose": "^5.0.6",
    "restify": "^6.3.4",
    "restify-cookies": "^0.2.2"
  },
  "lint-staged": {
    "+(src|api)/**/*.js": [
      "eslint -c .eslintrc",
      "git add"
    ]
